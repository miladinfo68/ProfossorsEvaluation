@{Layout = "~/Views/Shared/_LoginLayout.cshtml";}
@model IAUECProfessorsEvaluation.Web.Models.User


<div class="row">
    <div class="col-sm-4 center-block noFloat">
        <div class="loginBox">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.HaveMessage) && ViewBag.HaveMessage == "Error")
            {
                <div class="alert alert-danger centerText">
                    @ViewBag.Message
                </div>
            }
            <form method="post">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Username, new { @placeholder = "نام کاربری", @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "کلمه عبور", @class = "form-control" })
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="submit" value="ورود" class="btn btn-success col-sm-12" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>