                    data: "{'termId':'" + $(this).val() + "'}",
                    success: function (json) {
                        var options = [];
                        for (var i in json) {
                            options.push('<option value="' + json[i].Code + '">' + json[i].Name + '</option>');
                        }
                        $('#CollegeList').append(options.join(''));
                        $('.loadingWrapper').hide();
                    }
                });
            }
            else {
                $('.loadingWrapper').hide();
                </text>
            }
            else
            {
