                        }
                        $('#GroupList').append(options.join(''));
                        $('.loadingWrapper').hide();
                    }
                });
            }
            else {
                $('.loadingWrapper').hide();
            }
        });


        @if (ViewBag.CollegeId != null && ViewBag.TermId != null) {
