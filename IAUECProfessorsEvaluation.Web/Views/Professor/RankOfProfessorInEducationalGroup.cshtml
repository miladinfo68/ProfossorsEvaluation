            success: function (json) {
                var options = [];
                for (var i in json) {
                    options.push('<option value="' + json[i].Code + '">' + json[i].Name + '</option>');
                }
                $('#CollegeList').append(options.join(''));
                $('#CollegeList').val(@ViewBag.CollegeId);
            }
        });

            </text>
        }

        @if (isCollegeUser || isAdminUser)
