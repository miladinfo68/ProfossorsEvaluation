        $('#GroupList').find('option').remove().append('<option value="">انتخاب کنید</option>');
        $('#GroupList').append('<option value="">انتخاب کنید</option>');
            $.ajax({
                url: '/Professor/GetGroupsOfCollege',
                contentType: "application/json",
